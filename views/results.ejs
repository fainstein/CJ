<section id="results-section">
  <div class="row">

    <% recipesFound.slice(-9).forEach(recipe => { %> 
    <a href="/recipes/<%=recipe._id%>">
    <div class="col l4 m6 s12">
      <div class="card hoverable">
        <div class="card-image">
          <img src="./images/<%=recipe.imagen%>">
          <!-- <span class="card-title"><i class="material-icons">star star star star star_half</i></span> -->
        </div>
        <div class="card-content">
          <p><strong><%= recipe.titulo %> </strong></p>
        </div>
        <div class="card-content">
          <p><%= recipe.descripcion.length < 140 ? recipe.descripcion : recipe.descripcion.substring(0,140) + " ..." %></p>
        </div>
      </div>
    </div>
  </a>
  <%}); %>
  </div>

</section>





